<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape  xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#0a0b69"></solid>
            <corners android:radius="150dp"></corners>
            <stroke android:color="#6d151212" android:width="10dp"></stroke>
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp"
                android:top="12dp"></padding>

        </shape>
    </item>

    <item>
        <shape  xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#d27577"></solid>
            <corners android:radius="150dp"></corners>
            <stroke android:color="#6d151212" android:width="10dp"></stroke>
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp"
                android:top="12dp"></padding>

        </shape>
    </item>



</selector>